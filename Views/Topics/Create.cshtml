@model WebApplication1.viewmodel.ToppicCourseViewmodel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Topics", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Toppic.Name)
        @Html.TextBoxFor(m => m.Toppic.Name, new { @class = "form-control", @placeholder = "Enter Todo Description" })
        @Html.ValidationMessageFor(m => m.Toppic.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Toppic.Description)
        @Html.TextBoxFor(m => m.Toppic.Description, new { @class = "form-control", @placeholder = "Enter Todo Description" })
        @Html.ValidationMessageFor(m => m.Toppic.Description, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Toppic.Course.Name)
        @Html.DropDownListFor(m => m.Toppic.CourseId,
            new SelectList(Model.Courses, "Id", "Name"),
            new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Toppic.CourseId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}
<div class="form-group">
    <a href="@Url.Action("Index", "Topics")" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i>

    </a>
</div>