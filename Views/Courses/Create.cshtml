@model WebApplication1.Models.Course

@{
    ViewBag.Title = "Create";
}

<h2>Create new Course</h2>


@using (Html.BeginForm("Create", "Courses", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Cataglory</h4>
        <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Enter Todo Name" })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description)
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @row = 14, @placeholder = "Enter Todo Description" })
            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.StartDateTime)
            @Html.TextBoxFor(m => m.StartDateTime, new { @type = "date", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.EndDateTime)
            @Html.TextBoxFor(m => m.EndDateTime, new { @type = "date", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>

}


<div class="form-group">
    <a href="@Url.Action("Index", "Courses")" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i>

    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

