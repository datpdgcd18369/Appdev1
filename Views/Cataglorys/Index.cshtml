@model IEnumerable<WebApplication1.Models.Cataglory>

@{
    ViewBag.Title = "Index";
}

<h2>List Cataglory</h2>
<div class="form-group">
    @Html.ActionLink(
             "Create a new Cataglory",
             "Create",
             "Cataglorys",
             null,
             new { @class = "btn btn-primary" }
             )
</div>


<table class="table table-bordered">
    <tr>
       
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id },new { @class = "btn btn-danger" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn - warning" })
            </td>
        </tr>
    }

</table>
